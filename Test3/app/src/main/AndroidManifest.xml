<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nuonuomisu.test3">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/MaterialTheme">

        <activity android:name=".CameraActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Playerlist"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light">
        </activity>

        <activity android:name=".Recorder"
            android:label="@string/app_name"
            android:parentActivityName=".CameraActivity"
            android:theme="@style/Theme.AppCompat.Light">
        </activity>

        <activity android:name=".RecorderLive"
            android:label="@string/app_name"
            android:parentActivityName=".CameraActivity"
            android:theme="@style/Theme.AppCompat.Light">
        </activity>

        <activity android:name=".Player"
            android:label="@string/app_name"
            android:parentActivityName=".Playerlist"
            android:theme="@style/PlayerTheme"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode">
        </activity>

    </application>

</manifest>